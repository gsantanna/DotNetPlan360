@using Plan360.UI.Resources

  <!-- Begin Tab 2 - Plan Agents -->
<div role="tabpanel" class="tab-pane " id="step2">

    <div class="form-group" style="margin-top: 3px;">

        <div class="col-md-5">
            <!-- Filters -->
            <div class="panel panel-default panel-lookup" >
                <div class="panel-heading">@Plan360Strings.PLAN_SelectAgentsCaption</div>
                <div class="panel-body">

                    <div class="form-group">
                        <div class="control-label col-md-3">  @Plan360Strings.SALESFORCE  </div>
                        <div class="col-md-9">
                            <select id="agentLookupSalesForce" class="form-control">
                                <option></option>
                            </select>
                            <label id="agentLookupSalesForce-loading" class="loading-icon"></label>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="control-label col-md-3"> @Plan360Strings.ROLE </div>
                        <div class="col-md-9">
                            <select id="agentLookupRole" class="form-control">
                                <option></option>
                            </select>
                            <label id="agentLookupRole-loading" class="loading-icon"></label>
                        </div>
                    </div>



                    <!-- Salesforce Selector -->
                    <!-- End Salesforce Selector -->


                    <div class="form-group">

                        <div class="col-md-8">

                            <input type="text" id="agentLookup_search" class="form-control" placeholder="@Plan360Strings.PLAN_OtherData" />
                        </div>

                        <div class="col-md-4 text-right">
                            <button id="agentLookup_btn" class="btn btn-default">
                                <span class="glyphicon glyphicon-search"> @Plan360Strings.SEARCH </span>
                            </button>


                        </div>

                    </div>




                    <!-- agent lookup result area -->
                    <table id="tbAgentLookupSearchResult" data-toggle="table" data-click-to-select="true" data-sortable="true"
                           data-height="200"
                           class="table table-hover table-striped">

                        <thead>
                            <tr>
                                <th data-field="Selected" data-checkbox="true"></th>
                                <th data-field="IdAgent" data-visible="false"></th>
                                <th data-field="Code" data-sortable="true">@Plan360Strings.Code </th>
                                <th data-field="Name" data-sortable="true">@Plan360Strings.Name</th>
                                <th data-field="RoleDescription" data-sortable="true">@Plan360Strings.AGENT_Role </th>
                            </tr>
                        </thead>
                    </table>
                    <!-- end agent lookup result area-->
                    <!-- End Agent Lookup area -->
                </div>
            </div>

            <!-- Filters -->
        </div>

        <div class="col-md-2 text-center" style="vertical-align: middle; margin-top: 30px;">


            <div>
                <button class="btn btn-default " id="agentLookup_btnAdd">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </button>
            </div>

            <div style="height:20px"></div>

            <div>
                <button class="btn btn-default " id="agentLookup_btnAddAll">
                    <span class="glyphicon glyphicon-forward"></span>
                </button>
            </div>


            <div style="height:20px"></div>


            <div>
                <button class="btn btn-default " id="agentLookup_btnRemove">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                </button>
            </div>

            <div style="height:20px"></div>

            <div>
                <button class="btn btn-default " id="agentLookup_btnRemoveAll">
                    <span class="glyphicon glyphicon-backward"></span>
                </button>
            </div>

            <div style="height:20px"></div>


        </div>

        <div class="col-md-5">

            <div class="panel panel-default panel-lookup">
                
                <div class="panel-heading">@Plan360Strings.PLAN_SelectedAgentsCaption</div>



                <table id="tbSelectedAgents" data-toggle="table" data-click-to-select="true" data-sortable="true"
                       data-height="365"
                       class="table table-hover table-striped ">

                    <thead>
                    <tr>
                        <th data-field="Selected" data-checkbox="true"></th>
                        <th data-field="IdAgent" data-visible="false"></th>
                        <th data-field="Code" data-sortable="true">@Plan360Strings.Code </th>
                        <th data-field="Name" data-sortable="true">@Plan360Strings.Name</th>
                        <th data-field="Role" data-sortable="true">@Plan360Strings.AGENT_Role </th>
                    </tr>
                    </thead>
                </table>


            </div>

        </div>




    </div>

</div>
<!-- End Tab 2 - Plan Agents -->