@model PagedList.IPagedList<object>
@using PagedList.Mvc;



<table>
    <tr>

        @if (Model.PageCount > 1)
        {
            <td style="padding-right:10px;">

                @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter, pageSize = ViewBag.pageSize }))

            </td>
        }




        @if (Model.Count > 0)
        {
            <td>

                @Plan360.UI.Resources.Plan360Strings.PAGINATION_Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) @Plan360.UI.Resources.Plan360Strings.PAGINATION_Of @Model.PageCount

            </td>

        }


    </tr>
</table>